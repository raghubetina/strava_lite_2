<div class="card mb-3">
  <h2 class="card-header h4">
    Activity #<%= activity.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Created by</dt>
      <dd>
        <% if @activity.owner.present? %>
          <%= link_to activity.owner, activity.owner %>
        <% end %>
      </dd>

      <dt>Activity type</dt>
      <dd>
        <% if @activity.type.present? %>
          <%= link_to activity.type, activity.type %>
        <% end %>
      </dd>

      <dt>Photo</dt>
      <dd>
        <%= cl_image_tag @activity.photo, class: "img-fluid" %>
      </dd>

      <dt>Distance</dt>
      <dd><%= activity.distance %></dd>

      <dt>Calories</dt>
      <dd><%= activity.calories %></dd>

      <dt>Shoes used</dt>
      <dd>
        <% if @activity.shoes.present? %>
          <%= link_to activity.shoes, activity.shoes %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back activity, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @activity.owner %>
          <%= link_to edit_activity_url(activity), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @activity.owner %>
          <%= link_to activity, method: :delete, data: { confirm: "Do you really want to delete this activity?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(activity.updated_at) %> ago
  </div>
</div>
