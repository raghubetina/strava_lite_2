<div class="card mb-3">
  <h2 class="card-header h4">
    Shoe #<%= shoe.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Owner</dt>
      <dd><%= shoe.owner %></dd>

      <dt>Name</dt>
      <dd><%= shoe.name %></dd>

      <dt>Make</dt>
      <dd><%= shoe.make %></dd>

      <dt>Model</dt>
      <dd><%= shoe.model %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back shoe, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_shoe_url(shoe), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to shoe, method: :delete, data: { confirm: "Do you really want to delete this shoe?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(shoe.updated_at) %> ago
  </div>
</div>
